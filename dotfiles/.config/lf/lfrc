# Settings
set hidden true
set drawbox true
set icons true
set cursorpreviewfmt "\033[7;90m"
set previewer pistol

# Zoxide
cmd z %{{
	result="$(zoxide query --exclude $PWD $@)"
	lf -remote "send $id cd \"$result\""
}}

# FZF
cmd fzf ${{
	result="$(fd -H . | fzf --preview 'bat --color=always {}' --preview-window '~3')"
	if [ -d "$result" ] ; then
		cmd="cd"
	else
		cmd="select"
	fi
	lf -remote "send $id $cmd \"$result\""
}}
map f :fzf

map gr cd ~/Repos
map gn cd ~/Notes
